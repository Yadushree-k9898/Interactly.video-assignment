generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model VideoRequest {
  id          Int      @id @default(autoincrement())
  actorId     String
  name        String
  city        String
  phone       String
  status      String   @default("pending") // pending | generating | sent | failed
  syncRequest Json?
  syncJobId       String?    // store request data to Sync API
  syncResponse Json?  // store response (urls/ids
  whatsappResponse Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
