generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model VideoRequest {
  id               Int      @id @default(autoincrement())
  actorId          String
  name             String
  city             String
  phone            String
  status           String   @default("pending") // pending | generating | sent | failed | generated | timeout
  syncRequest      Json?
  syncJobId        String?    // job ID from SyncLabs
  syncResponse     Json?      // full API response
  whatsappResponse Json?
  videoUrl         String?    // âœ… NEW: final video download/streaming URL
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
